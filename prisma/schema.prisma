// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int    @id @default(autoincrement())
  name        String
  phone       String @unique
  appointment Int?   @unique
  password    String
  role        String @default("user")
}

model layout_day {
  id      Int     @id @unique
  date    String  @unique @db.VarChar(9)
  opening String  @db.VarChar(5)
  cloding String  @db.VarChar(5)
  closed  Boolean @db.TinyInt
}

model custom_oc {
  id      Int     @id @unique
  date    String  @unique @db.VarChar(45)
  opening String  @db.VarChar(5)
  closing String  @db.VarChar(5)
  closed  Boolean @db.TinyInt
}

model custom_closed_time {
  id   Int    @id @unique
  date String @unique @db.VarChar(45)
  time String @db.VarChar(5)
}

model appointments {
  id      Int    @id @unique
  date    String @db.VarChar(45)
  user_id Int    @unique
  time    String @db.VarChar(5)
}
